<!DOCTYPE html>
<html>
  <head>
    <title>Whatchadoin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    
   <!--    <img src="whatchadoin_logo.png" width="200" height="30"> -->
    

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      
      <%= link_to("Home", root_path, :class => "navbar-item") %>

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          More
        </a>

        <div class="navbar-dropdown">
        <% if admin_logged_in?%>
          <%= link_to("New User", new_user_path, :class => "navbar-item") %>
          <%= link_to("New Nag", new_nag_path, :class => "navbar-item") %>
          <%= link_to("New Task", new_task_path, :class => "navbar-item") %>
          <%= link_to("New Group", new_group_path, :class => "navbar-item") %>
        <% elsif logged_in? %>
          <%= link_to("New Nag", new_nag_path, :class => "navbar-item") %>
        <% else %>
          <a class="navbar-item">
            Contact
          </a>
          <hr class="navbar-divider">
          <a class="navbar-item">
            Report an issue
          </a>
          <% end %>

        </div>
      </div>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if logged_in? || admin_logged_in?%>
          <%= link_to("Logout", logout_path, :class => "button is-light", :method => "delete") %>
          <%else%>
          <%= link_to("Sign Up", signup_path, :class => "button is-primary") %>
          
          <%= link_to("Login", login_path, :class => "button is-light") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

    <%= yield %>
  </body>
</html>
