<% if admin_logged_in?%>
<h1>This is <%= @user.name %> profile</h1>

<br><br><br><br><br><br>
<% end %>



<h1>Welcome <%= @user.name %></h1>

<h1>These are your tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Group ID</th>
      <th>Group Name</th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |t| %>
      <tr>
        <td><%= t.content %></td>
        <td><%= t.group_id %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>



