<h1> New Nag </h1> <br> <br>
	<%= flash[:message]  if flash[:message]%>
<% if admin_logged_in? %>

<%= form_for(@nag) do |f| %>

<%= f.label "WhatchaDoin?" %> <br> <br>
<%= f.text_area :content, :cols => 90, :rows => 6 %>  <br>

<%= f.label "Task:" %>
<%= f.collection_select(:task_id, current_admin.tasks.all, :id, :content) %>

<%= f.submit "Submit" %>
<% end %>
<% else %>

<%= form_for(@nag) do |f| %>

<%= f.label "WhatchaDoin?" %> <br> <br>
<%= f.text_area :content, :cols => 90, :rows => 6 %>  <br>

<%= f.label "Task:" %>
<%= f.collection_select(:task_id, current_user.tasks.all, :id, :content) %>

<%= f.submit "Submit" %>

<% end %>
<% end %>