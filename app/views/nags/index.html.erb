<div class="container is-fluid">
  <div class="notification">

<h1>All Nags</h1>

<% if admin_logged_in? %>

	<% if current_admin.nags.blank? %>

    <h2>No nags yet. Write a nag <%= link_to "here", new_nag_path%></h2>

	<% else %>

  
		<% @nags.each do |nag| %>
			<%= nag.content %> - <%= nag.created_at.to_formatted_s(:long_ordinal) %><br>
			 - <strong><%= nag.creator.try(:name) %></strong><br>
			<%= link_to "Edit Nag",  edit_admin_nag_path(current_admin, nag.id) %><br>

		<% end %>
	
	

	<% end %>

<% else %>

	<% if current_user.nags.blank? %>

    <h2>No nags yet. Write a nag <%= link_to "here", new_nag_path%></h2>

	<% else %>
  <ul>
		<% @nags.each do |nag| %>

			<li><%= nag.content %> - <%= nag.created_at.to_formatted_s(:long_ordinal) %><br>
			- <strong> <%= nag.creator.try(:name) %></strong></li>
			<li><%= link_to "Edit Nag",  edit_user_nag_path(current_user, nag.id) %></li>

		<% end %>
	</ul>


	<% end %>

<% end %>

</div>
</div>