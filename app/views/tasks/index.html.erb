<h1> Admins Tasks </h1>

<br><br>



	<% if current_admin.groups.empty? %>
		
		<h1>You have no groups</h1>
		
	<% else %>

			<li>
				<% @tasks.each do |tasks| %>
				<%= tasks.content %><br>
				<%= tasks.duedate %><br>
				<%= link_to 'Edit', edit_task_path(tasks.id) %><br>
				<% end %>
				</li>	
	<% end %>

	